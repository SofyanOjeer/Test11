<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <com.example.mythermometer.Thermometer
        android:id="@+id/thermometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="80dp"

        app:innerColor="@color/innerColor"
        app:middleColor="@color/middleColor"
        app:outerColor="@color/outerColor"
        app:radius="60dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thermometer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="115dp"
        android:text="-20"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thermometer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="257dp"
        android:layout_marginBottom="170dp"
        android:text="-10"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thermometer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="257dp"
        android:layout_marginBottom="226dp"
        android:text="0"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thermometer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="254dp"
        android:layout_marginBottom="281dp"
        android:text="10"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thermometer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="356dp"
        android:text="20"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thermometer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="254dp"
        android:layout_marginBottom="419dp"
        android:text="30"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thermometer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="257dp"
        android:layout_marginBottom="477dp"
        android:text="40"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thermometer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="531dp"
        android:text="50"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thermometer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="251dp"
        android:layout_marginBottom="584dp"
        android:text="60"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="139dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/soma_corp_removebg_preview" />

    <Button
        android:id="@+id/button"
        android:layout_width="71dp"
        android:layout_height="67dp"
        android:layout_alignEnd="@+id/button"
        android:layout_alignBottom="@+id/thermometer"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-74dp"
        android:text="Home" />

    <Button
        android:id="@+id/button2"
        android:layout_width="101dp"
        android:layout_height="72dp"
        android:layout_alignBottom="@+id/thermometer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="-72dp"
        android:text="Sound" />


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature : "
        android:textSize="40dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40dp"
        android:layout_marginTop="90dp"/>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Humidity : "
        android:textSize="40dp"
        android:layout_marginTop="170dp"/>
    <TextView
        android:id="@+id/hum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40dp"
        android:layout_marginTop="230dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.electroniclinic.com"
        android:textSize="30dp"
        android:layout_marginTop="340dp"/>

</RelativeLayout>